@page "/"
@inject IDialogService DialogService

<div class="d-flex justify-end mt-5">
    <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="AddRequestRule">Add Rule</MudButton>
</div>

<MudGrid Spacing="2" Class="mt-5">
    <MudItem sm="6">
        <RequestsComponent></RequestsComponent>
    </MudItem>
    <MudItem sm="6">
        <RequestRulesComponent @ref="CustomRequestList"></RequestRulesComponent>
    </MudItem>
</MudGrid>

@code {
    private RequestRulesComponent? CustomRequestList;

    private async Task AddRequestRule()
    {
        var options = new DialogOptions {
            CloseOnEscapeKey = true,
            CloseButton = true,
            FullWidth = true,
            MaxWidth = MaxWidth.Small,
        };
        var dialog = await DialogService.ShowAsync<RequestRuleEditFormComponent>("Request Rule", options);
        var result = await dialog.Result;

        if (!result.Canceled)
        {
            if(CustomRequestList is not null)
            {
                await CustomRequestList.RefreshRequestRulesAsync();
            }
        }
    }
}
